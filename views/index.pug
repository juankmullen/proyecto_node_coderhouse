html(lang='en')
	head
		title Tarea 6
		link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
		script(src="https://code.jquery.com/jquery-3.6.0.js",
				integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=",
				crossorigin="anonymous")
		script(src="socket.io/socket.io.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.3/moment.min.js")
	body
		div(class="row mt-5")
			div(class="col-md-6 offset-3")

				form(onsubmit='submitForm(event)')
					
					div(class="form-group")
						label Titulo :
						input(class="form-control",required,type="text",id="title",placeholder="Ingresar Titulo")

					div(class="form-group")
						label Precio :
						input(class="form-control",required,type="text",id="price",placeholder="Ingresar Precio")

					div(class="form-group")
						label Thumbnail :
						input(class="form-control",required,type="text",id="thumbnail",placeholder="Ingresar Thumbnail")


					button(class="btn btn-block btn-success mt-3",type="submit") Enviar

				table(class="table table-sm table-bordered mt-5",id="table")
					thead
						th Titulo
						th Precio
						th(style={'max-width':'100px'}) Thumbnail
					tbody(id="table-body")

				form(onsubmit='submitChat(event)')
					
					div(class="form-group")
						label Email :
						input(class="form-control",required,type="email",id="email",placeholder="Ingresar Email")

					div(class="form-group")
						label Mensaje :
						input(class="form-control",required,type="text",maxlength="150",id="mensaje",placeholder="Ingresar Mensaje")

					button(class="btn btn-block btn-success mt-3",type="submit") Enviar Mensaje

				ol(id="lista_chat")
					
						

	script(src='/js/index.js')