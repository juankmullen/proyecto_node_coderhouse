html(lang='en')
	head
		title Desafio Normalizacion
		link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
		script(src="https://code.jquery.com/jquery-3.6.0.js",
				integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=",
				crossorigin="anonymous")
		script(src="socket.io/socket.io.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.3/moment.min.js")
	body
		div(class="row mt-5")
			div(class="col-md-6 offset-3")

				if username != ''
					div(class="bg-success text-white p-4") 
						button(class="btn tbn-sm btn-primary text-white") 
							h5  Usuario : #{username} Email : #{email}
						a(href="/logout",class="btn btn-danger",style="float: right") Salir


				h1 Compresi√≥n 
					label(id="porc")
				form(onsubmit='submitChat(event)')

					div(class="form-group")
						label Nombre :
						input(class="form-control",required,type="text",id="nombre",placeholder="Ingresar Nombre")

					div(class="form-group")
						label Apellido :
						input(class="form-control",required,type="text",id="apellido",placeholder="Ingresar Apellido")

					div(class="form-group")
						label Alias :
						input(class="form-control",required,type="text",id="alias",placeholder="Ingresar Alias")

					div(class="form-group")
						label ID Author :
						input(class="form-control",required,type="numbre",id="id_author",placeholder="ID Author")
					
					div(class="form-group")
						label Email :
						input(class="form-control",required,type="email",id="email",placeholder="Ingresar Email")

					div(class="form-group")
						label Mensaje :
						input(id="mensaje",class="form-control",required,type="text",maxlength="150",placeholder="Ingresar Mensaje")

					button(id="btnMensaje",class="btn btn-block btn-success mt-3",type="submit") Enviar Mensaje

				table(class="table table-sm table-bordered mt-5",id="table")
					thead
						th Time
						th Autor
						th Mensaje
					tbody(id="table-body")
					
						

	script(src='/js/index.js')