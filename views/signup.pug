html(lang='en')
    head
        title SIGNUP
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
        script(src="https://code.jquery.com/jquery-3.6.0.js",
            integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=",
            crossorigin="anonymous")
        script(src="socket.io/socket.io.js")
    body
        div(class="row mt-5")
            div(class="col-md-6 offset-3")


                h1 SIGNUP 
                form(method="POST",action="/signup")

                    div(class="form-group")
                        label Nombre :
                        input(class="form-control",required,type="text",name="username",placeholder="Ingresar Usuario")
                    br

                    div(class="form-group")
                        label Apellido :
                        input(class="form-control",required,type="text",name="lastname",placeholder="Ingresar Apellido")
                    br

                    div(class="form-group")
                        label Email :
                        input(class="form-control",required,type="text",name="email",placeholder="Ingresar Email")
                    br

                    div(class="form-group")
                        label Contraseña :
                        input(class="form-control",required,type="password",name="password",placeholder="Ingresar Contarseña")

                    button(class="btn btn-sm btn-success mt-3 m-3",type="submit") Registrarse
                    a(class="btn btn-sm  btn-primary mt-3 m-3",href="/login") Ingresar

                if message
                    div #{message}



